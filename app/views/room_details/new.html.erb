<h1>New Room Detail</h1>

<%= form_with(model: @room_detail, local: true) do |form| %>


  <div>
    <%= form.label :room_no, 'Room Number' %>
    <%= form.number_field :room_no %>
  </div>

  <div>
    <%= form.label :rent_per_day, 'Rent per Day' %>
    <%= form.number_field :rent_per_day, step: 0.01 %>
  </div>

  <div>
    <%= form.label :room_type_id, 'Room Type' %>
    <%= form.collection_select(:room_type_id, RoomType.all, :id, :room_type, prompt: 'Select Room Type') %>
  </div>

  <div>
  <%= form.label :roomstatus %>
  <%= form.select :roomstatus, RoomDetail.roomstatuses.keys.map { |status| [status.capitalize, status] }, prompt: 'Select Room Status' %>
</div>

   <div class="form-group">
    <%= form.label :bookingstatus %>
    <%= form.select :booking_status, ['available', 'booked', 'maintenance'], prompt: 'Select Room Status', class: 'form-control' %>  <!-- Correct method -->
  </div>


  <div>
    <%= form.submit 'Create Room Detail' %>
  </div>
<% end %>

<%= link_to 'Back', room_details_path %> <!-- Link to go back -->
