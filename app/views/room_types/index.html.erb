<h1>Room Types</h1>

<table>
  <tr>
    <th>Room Type</th>
    <th>Actions</th>
  </tr>
  <% @room_types.each do |room_type| %>
    <tr>
      <td><%= room_type.room_type %> <!-- Display the room type --></td>
      <td>
        <%= link_to 'Show', room_type %> <!-- Show the details of a room type -->
        <%= link_to 'Edit', edit_room_type_path(room_type) %> <!-- Edit a room type -->
        <%= link_to 'Delete', room_type, method: :delete, data: { confirm: 'Are you sure?' } %> <!-- Delete a room type -->
      </td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Room Type', new_room_type_path %> <!-- Link to create a new room type -->

