<%= form_with(model: bed, local: true) do |form| %>


  <div class="field">
    <%= form.label :bed_size %>
    <%= form.text_field :bed_size, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Save Bed', class: 'btn btn-primary' %>
  </div>
<% end %>
